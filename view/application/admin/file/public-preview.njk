{% extends "layout/master.njk" %}

{% block content %}
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-sm">
        <div class="card-header bg-white d-flex justify-content-between align-items-center">
          <h5 class="mb-0 text-truncate" title="{{ file.title }}">{{ file.title }}</h5>
          <span class="badge badge-primary">Public Access</span>
        </div>
        <div class="card-body text-center p-5">
            {# Use getters for robust access #}
            {% set contentType = file.getContentType() %}
            {% set sizeBytes = file.getSizeBytes() %}
            
            {% if contentType and contentType.startsWith('image/') %}
                <img src="{{ downloadUrl }}" class="img-fluid rounded" alt="{{ file.getTitle() }}" style="max-height: 500px;">
            {% elseif contentType and contentType.startsWith('video/') %}
                <video controls class="w-100 rounded" style="max-height: 500px;">
                    <source src="{{ downloadUrl }}" type="{{ contentType }}">
                    Your browser does not support the video tag.
                </video>
            {% elseif contentType and contentType.startsWith('application/pdf') %}
                 <div class="embed-responsive embed-responsive-16by9" style="height: 800px;">
                    <iframe src="{{ downloadUrl }}" class="embed-responsive-item w-100 h-100" frameborder="0">
                        <p>Your browser does not support PDFs. <a href="{{ downloadUrl }}">Download the PDF</a>.</p>
                    </iframe>
                </div>
            {% else %}
                <div class="mb-4">
                    <i class="fas fa-file-alt fa-5x text-muted"></i>
                </div>
                <p class="text-muted">{{ file.getOriginalFilename() }} ({{ (sizeBytes / 1024 / 1024) | round(2) }} MB)</p>
            {% endif %}

            <div class="mt-4">
                <a href="{{ downloadUrl }}" class="btn btn-primary btn-lg">
                    <i class="fas fa-download mr-2"></i> Download
                </a>
            </div>
        </div>
        <div class="card-footer text-muted text-center small">
            Shared via File Service
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
